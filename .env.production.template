# Production Environment Variables Template
# Copy this to .env.production and fill in your actual values

# Environment
NODE_ENV=production
PORT=3000

# JWT & Cookies - CRITICAL: Change these values!
JWT_SECRET=CHANGE-THIS-TO-A-LONG-RANDOM-STRING-AT-LEAST-64-CHARACTERS-LONG
CROSS_SITE=true

# CORS - Replace with your actual domain
ALLOWED_ORIGINS=["https://chat.yourdomain.com"]
SOCKET_ALLOWED_ORIGINS=["https://chat.yourdomain.com"]

# Database - Replace with your actual PostgreSQL connection string
DATABASE_URL=postgresql://USER:PASS@HOST:PORT/DB?sslmode=require

# Redis - Replace with your actual Redis URL (Upstash free tier)
REDIS_URL=rediss://:PASS@HOST:PORT

# Cloudflare R2 Storage - Replace with your actual R2 credentials
R2_ENDPOINT=https://YOUR-ACCOUNT-ID.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET=your-bucket-name

# Metrics Authentication (optional but recommended)
METRICS_USER=metrics
METRICS_PASS=CHANGE-THIS-TO-ANOTHER-LONG-RANDOM-STRING

# Optional: Logging
LOG_LEVEL=info

# Optional: Message retention
RECEIPT_TTL_DAYS=30
